{% block html_head_container %}
  {% include 'html-header.twig' %}
    {% block head %}{% endblock %}
  </head>
{% endblock %}

<body class="{{body_class}}" data-template="base.twig">
  <header class="page-header">
    {% block page_header %}
    <h1 class="page-header__logo">
     <img src="/wp-content/themes/lentilz/assets/img/signature_tp.png" alt="Lentie Ward Signature graphic" title="Lentie Ward">
    </h1>
    {% endblock %}
  </header>
  <main role="main" class="{% block layout %}layout--main{% endblock %}">
    {% block content %}
    <article class="page-content">
      {{ post.content }}
    </article>
    {% endblock %}
  </main>

  {% block footer %}
  <footer role="footer" class="page-footer">
    {% include 'footer.twig' %}
  </footer>
  <hr>
  {% endblock %}

{{ function('wp_footer') }}
</body>
